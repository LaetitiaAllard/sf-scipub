{% extends 'base.html.twig' %}

{% block content %}
    <h1>Sciences list</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-stripped table-condensed">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for science in sciences %}
                <tr>
                    <td>{{ science.title }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('app_admin_science_show', { 'id': science.id }) }}"
                                    class="btn btn-xs btn-primary">
                                    Show
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_admin_science_edit', { 'id': science.id }) }}"
                                    class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('app_admin_science_new') }}" class="btn btn-sm btn-success">
                Create a new science
            </a>
        </li>
    </ul>
{% endblock %}
